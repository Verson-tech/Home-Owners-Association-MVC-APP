@model Request

<h2>Create a New Request</h2>

@using (Html.BeginForm("InsertRequestToDatabase", "Request", "Post"))
{
    <input asp-for="RequestID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />


    //1
@*    <label asp-for="CategoryID" class="control-label">Category ID</label>
    <input type="number" step="0.01" asp-for="CategoryID" class="control-label" />*@

        <div class="form-group">
            <label for="">Select a Category</label>
                <select class="form-control" name="CategoryID" value="">
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.Name"> @cat.Name</option>
              @*  <option value="@cat.Name">@cat.CategoryID @cat.Name</option>*@
                    }
                </select>
        </div>

    <label asp-for="RequestDESC" class="control-label">Request description</label>
    <input type="text" step="0.01" name="CategoryID" class="form-control" value="@Model.CategoryID" />

    <label asp-for="RequestSTATUS" class="control-label">Request STATUS</label>
    <input type="text" step="0.01" name="RequestSTATUS" class="form-control" value="@Model.RequestSTATUS" />






    <label asp-for="StartDate" class="control-label">Start Date</label>
    <input type="date" step="0.01" name="StartDate" class="form-control" value="@Model.StartDate" />

    <label asp-for="EndDate" class="control-label">End Date</label>
    <input type="date" step="0.01" name="EndDate" class="form-control" value="@Model.EndDate" />

    <label asp-for="Initiator" class="control-label">Initiator</label>
    <input type="text" step="0.01" name="Initiator" class="form-control" value="@Model.Initiator" />

    <label asp-for="Assignee" class="control-label">Assignee</label>
    <input type="text" step="0.01" name="Assignee" class="form-control" value="@Model.Assignee" />


    <input type="submit" value="Create Request" class="btn btn-primary" />
}