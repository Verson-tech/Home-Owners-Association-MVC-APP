@model Request


<style>
    body {
        background: radial-gradient( hsl(218, 41%, 35%) 25%, #f7aba6);
        background-image: radial-gradient(1050px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1550px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
/*        font-family: 'Lobster', cursive;
        font-size: large; */
    }
</style>
<h2 style="font-family:'Agency FB'; color:#fa8178; text-align:center; font-size:xx-large; font-weight:700; text-shadow: 5px 5px 7px blue;">Create a New Request</h2>

@using (Html.BeginForm("InsertRequestToDatabase", "Request", "Post"))
{
    <input asp-for="RequestID" type="hidden" value="" />

    <label asp-for="Name" class="control-label" style="text-align:center; color:aliceblue; font-size:x-large; font-family:'Agency FB';">Name</label>
    <input type="text" name="Name" class="form-control" value="" />


    //1
@*    <label asp-for="CategoryID" class="control-label">Category ID</label>
    <input type="number" step="0.01" asp-for="CategoryID" class="control-label" />*@

    <div class="form-group" style="color:aliceblue; font-size:x-large; font-family:'Agency FB';">
            <label for="">Select a Category</label>
                <select class="form-control" name="CategoryID" value="">
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.Name"> @cat.Name</option>
              @*  <option value="@cat.Name">@cat.CategoryID @cat.Name</option>*@
                    }
                </select>
        </div>

    <label asp-for="RequestDESC" class="control-label" style="text-align:center; color:aliceblue; font-size:x-large; font-family:'Agency FB';">Request description</label>
    <input type="text" step="0.01" name="RequestDESC" class="form-control" value="@Model.CategoryID" />

@*    <label asp-for="RequestSTATUS" class="control-label">Request STATUS</label>
    <input type="text" step="0.01" name="RequestSTATUS" class="form-control" value="@Model.RequestSTATUS" />*@

    <div class="form-group" style="color:aliceblue; font-size:x-large; font-family:'Agency FB';">
        <label for="">Select a Status</label>
        <select class="form-control" name="RequestSTATUS" value="">
            @foreach (var cat in Model.StatusList)
            {
                <option value="@cat.IdStatus"> @cat.IdStatus</option>
                @*  <option value="@cat.Name">@cat.CategoryID @cat.Name</option>*@
            }
        </select>
    </div>





    <label asp-for="StartDate" class="control-label" style="color:aliceblue; font-size:x-large; font-family:'Agency FB';">Start Date</label>
    <input type="date" step="0.01" name="StartDate" class="form-control" value="@Model.StartDate" />

    <label asp-for="EndDate" class="control-label" style="color:aliceblue; font-size:x-large; font-family:'Agency FB';">End Date</label>
    <input type="date" step="0.01" name="EndDate" class="form-control" value="@Model.EndDate" />

    <label asp-for="Initiator" class="control-label" style="color:aliceblue; font-size:x-large; font-family:'Agency FB';">Initiator</label>
    <input type="text" step="0.01" name="Initiator" class="form-control" value="@Model.Initiator" />

    <label asp-for="Assignee" class="control-label" style="color:aliceblue; font-size:x-large; font-family:'Agency FB';">Assignee</label>
    <input type="text" step="0.01" name="Assignee" class="form-control" value="@Model.Assignee" />

    <div class="p-3 col text-center">
        <input type="submit" value="Create Request" class="btn btn-default" style="color:aliceblue; font-size:x-large; font-family:'Agency FB'; background: radial-gradient( hsl(218, 41%, 35%) 25%, #f7aba6); " />
    </div>


    <div class="card-body">
        <a class="dropdown-item justify-content-center text-center" style="color:aliceblue; font-size:xx-large; font-family:'Agency FB'; background: radial-gradient( hsl(218, 41%, 35%) 25%, #f7aba6); " asp-controller="Request" asp-action="Index">Back to all requests</a>
    </div>

}